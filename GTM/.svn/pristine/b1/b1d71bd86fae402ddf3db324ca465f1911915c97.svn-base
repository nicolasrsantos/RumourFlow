package org.textsim.textrt.proc.grouptexts;


/**
 * Pair stores information of the information of a pair of texts,
 * which includes first text name, first rejection text name, second text name, second rejection text name.
 * @author Vivian
 * @version 0.2
 * @since June 10/2013
 */
public class Pair {
	
	private String txtA, txtArej, txtB, txtBrej;
	
/**
 * default constructor: initialize every attribute
 */
	public Pair()
	{
		txtA=null;
		txtArej=null;
		txtB=null;
		txtBrej=null;
	}
	/**
	 *  set values to the first element in a pair
	 * @param txtA     the name of text file
	 * @param txtArej  the name of rejection text file
	 */
	public void setElementA(String txtA, String txtArej)
	{
		this.txtA = txtA;
		this.txtArej = txtArej;
	}
	/**
	 *  set values to the second element in a pair
	 * @param txtB     the name of text file
	 * @param txtBrej  the name of rejection text file
	 */
	public void setElementB(String txtB, String txtBrej)
	{
		this.txtB = txtB;
		this.txtBrej = txtBrej;
	}
	/**
	 * get the name of first text file
	 * @return textA name
	 */
	public String getTextA()
	{
		return txtA;
	}
	/**
	 * get the name of second text file
	 * @return textB name
	 */
	public String getTextB()
	{
		return txtB;
	}
	/**
	 * get the name of first rejection file
	 * @return textA rejection name
	 */
	public String getRejA()
	{
		return txtArej;
		
	}
	/**
	 * get the name of second rejection file
	 * @return textB rejection name
	 */
	public String getRejB()
	{
		return txtBrej;
	}
}